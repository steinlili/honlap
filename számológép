<input  type="number" 
        id="i1" 
        min="0"
        max="9999999">
<input  type="number" 
        id="i2" 
        min="0"
        max="9999999">
<button onclick="f()">add össze!</button>
<hr>
<div id="er"></div>

<script>
    function f() {
        a = document.getElementById("i1").value
        b = document.getElementById("i2").value
        document.getElementById("er").innerHTML=
        `Az eredmény: ${ 
            Number(a)+Number(b)
        }`
    }
</script>
